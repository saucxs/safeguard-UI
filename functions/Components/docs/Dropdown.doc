/**
 * @title 基本功能
 */
import { Dropdown, DropdownToggle, DropdownMenu } from 'bfd/Dropdown'
import Button from 'bfd/Button'

const DropdownBasic = () => {
  return (
    <Dropdown>
      <DropdownToggle>
        <Button>Open</Button>
      </DropdownToggle>
      <DropdownMenu>
        Nullam quis risus eget urna mollis
        ornare vel eu leo. Cum sociis natoque
        penatibus et magnis dis parturient montes
      </DropdownMenu>
    </Dropdown>
  )
}

/**
 * @title 自定义方向、对齐方式
 */
import { Dropdown, DropdownToggle, DropdownMenu } from 'bfd/Dropdown'
import Button from 'bfd/Button'

const DropdownRight = () => {
  return (
    <Dropdown>
      <DropdownToggle>
        <Button>Open</Button>
      </DropdownToggle>
      <DropdownMenu direction="up" align="right">
        Nullam quis risus eget urna mollis
        ornare vel eu leo. Cum sociis natoque
        penatibus et magnis dis parturient montes
      </DropdownMenu>
    </Dropdown>
  )
}

/**
 * @title 嵌套的
 */
import { Dropdown, DropdownToggle, DropdownMenu } from 'bfd/Dropdown'
import Button from 'bfd/Button'

const DropdownNested = () => {
  return (
    <Dropdown>
      <DropdownToggle>
        <Button>Open</Button>
      </DropdownToggle>
      <DropdownMenu>
        Nullam quis risus eget urna mollis
        ornare vel eu leo. Cum sociis natoque
        penatibus et magnis dis parturient montes
