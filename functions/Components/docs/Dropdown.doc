/**
 * @title 不可用的
 */
import { Dropdown, DropdownToggle, DropdownMenu } from 'bfd/Dropdown'
import Button from 'bfd/Button'

const DropdownDisabled = () => {
  return (
    <Dropdown disabled>
      <DropdownToggle>
        <Button>Open</Button>
      </DropdownToggle>
      <DropdownMenu></DropdownMenu>
    </Dropdown>
  )
}

